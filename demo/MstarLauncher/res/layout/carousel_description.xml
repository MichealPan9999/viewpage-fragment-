<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700dp"
    android:layout_height="wrap_content"
    android:background="@drawable/movie_description_background" >

    <ImageView
        android:id="@+id/carousel_description_image"
        android:layout_width="210dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/image_loading" />

    <TextView
        android:id="@+id/carousel_description_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/carousel_description_image"
        android:layout_marginLeft="22dp"
        android:textSize="30dp"
        android:layout_marginTop="26dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/carousel_description_director_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carousel_description_movie_name"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="53dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/carousel_description_image"
        android:text="@string/director"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/carousel_description_director_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/carousel_description_director_title"
        android:layout_toRightOf="@+id/carousel_description_director_title"
        android:textSize="20dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/carousel_description_actor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carousel_description_director_title"
        android:layout_below="@+id/carousel_description_director_title"
        android:layout_marginTop="46dp"
        android:textSize="20dp"
        android:text="@string/actor"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/carousel_description_actor_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/carousel_description_actor_title"
        android:layout_toRightOf="@+id/carousel_description_actor_title"
        android:textSize="20dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/carousel_description_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/carousel_description_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="@string/description"
        android:textColor="@android:color/black" />
	<ScrollView 
	    android:id="@+id/carousel_description_description_scroll"
	    android:layout_width="wrap_content"
	    android:layout_height="200dp"
	    android:layout_below="@+id/carousel_description_description_title">
    <TextView
		android:id="@+id/carousel_description_description_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:textColor="@android:color/black" />
</ScrollView>

	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/carousel_description_description_scroll"
	    >
    <Button
        android:id="@+id/carousel_description_watch"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bnt_imovie_description_button"
        android:text="@string/watch" />
    
        <Button
        android:id="@+id/carousel_description_back"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bnt_imovie_description_button"
        android:text="@string/back" />
</LinearLayout>
</RelativeLayout>